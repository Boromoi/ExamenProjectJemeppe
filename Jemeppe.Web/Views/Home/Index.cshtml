@{
    ViewData["Title"] = "Home Page";
}

@*Image Slider*@
<div class="sizecontainer">
    <div id="slides" class="carousel slide" data-ride="carousel">
        <ul class="carousel-indicators">
            <li data-target="#slides" data-slide-to="0" class="active"></li>
            <li data-target="#slides" data-slide-to="1"></li>
            <li data-target="#slides" data-slide-to="2"></li>
        </ul>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/assets/images/Hotel.jpg" class="Imagescroller" />
                <div class="carousel-caption">
                    <h1 class="display-2">Do you want a place to stay?</h1>
                    <h3>We can fix that for you!</h3>
                    <a class="btn btn-outline-light btn-lg" asp-area="" asp-controller="Home" asp-action="Rooms">VIEW ROOMS</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/assets/images/TweePersoonsKamer1.jpg" class="Imagescroller" />
            </div>
            <div class="carousel-item">
                <img src="~/assets/images/TweePersoonsKamer2.jpg" class="Imagescroller" />
            </div>
        </div>
    </div>
</div>

@*What we profide*@
<div class="container-fluid padding">
    <hr class="my-4" style="background-color:lightgray; margin-top:80px;">
    <div class="row welcome text-center">
        <div class="col-12">
            <h1 class="display-4">Provided by us.</h1>
        </div>
        <hr>
        <div class="col-12">
            <p class="lead">We provide three different services: A good room to stay. Meals. And we provide a tour through the castle.</p>
        </div>
    </div>
</div>

@*Three collumn section*@
<div class="container-fluid padding">
    <div class="row text-center padding">
        <div class="col-xs-12 col-sm-6 col-md-4">
            <i class="fas fa-bed"></i>
            <h3>Rooms</h3>
            <p>We got comfy rooms of different sizes.</p>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4">
            <i class="fas fa-utensils"></i>
            <h3>Meals</h3>
            <p>We provide the meals for breakfast and for dinner.</p>
        </div>
        <div class="col-xs-12 col-md-4">
            <i class="fas fa-camera-retro"></i>
            <h3>Jemeppe's Castle Tour</h3>
            <p>We give a tour through the castle to give some entertainment.</p>
        </div>
    </div>
    <hr class="my-4" style="background-color:lightgray;">
</div>
